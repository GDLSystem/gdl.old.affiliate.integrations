@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Gdl.Affiliate.Integrations.Localization
@using Gdl.Affiliate.Integrations.Web.Pages.ShopinessClicks
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Gdl.Affiliate.Integrations.ShopinessClicks;
@using System.Globalization
@inject IHtmlLocalizer<IntegrationsResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/ShopinessClicks/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="ShopinessClick.Click"/>

            <abp-select asp-for="ShopinessClick.AffiliateOwnershipType"/>

            <abp-input asp-for="ShopinessClick.CreatedAt" value="@(Model.ShopinessClick.CreatedAt.ToString("yyyy-MM-dd"))" type="date"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>